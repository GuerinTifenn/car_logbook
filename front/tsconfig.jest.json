{
	"compilerOptions": {
	  "lib": ["dom", "dom.iterable", "esnext"],
	  "allowJs": true,
	  "skipLibCheck": true,
	  "strict": true,
	  "noEmit": true,
	  "esModuleInterop": true,
	  "module": "esnext",
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  "jsx": "react-jsx" // Forcer Jest Ã  utiliser `react-jsx` pour transformer le JSX
	},
	"include": ["**/*.ts", "**/*.tsx", "__tests__/**/*.ts", "__tests__/**/*.tsx"],
	"exclude": ["node_modules", ".next", "dist"]
  }
